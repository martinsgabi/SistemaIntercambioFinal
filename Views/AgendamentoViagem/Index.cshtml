@model IEnumerable<SistemaIntercambioFinal.Models.AgendamentoViagem>

@{
    ViewData["Title"] = "Index";
}

<h1>Agende sua viagem </h1>

<p>
    <a asp-action="Create">Novos Lugares</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataAgendamentoViagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraAgendamentoViagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanhiaAerea)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataAgendamentoViagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraAgendamentoViagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanhiaAerea.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
